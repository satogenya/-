#include <stdio.h>

int main(void)
{
    int j,k,sum;
    
    printf("一つ目の数字は？");
    scanf("%d", &j);
    
    printf("二つ目の数字は？");
    scanf("%d", &k);
    
    sum = j + k;
    
    if (sum > 100){
        printf("合計は%dで100を超えています。\n",sum);
    }
    else if (sum == 100){
        printf("合計は%dでちょうど100です。\n",sum);
    }
    else {
        printf("合計は%dで100未満です。\n",sum);
    }
    
    return 0;
}
